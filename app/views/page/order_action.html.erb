<div class="container-fluid" style="padding-top: 100px">

  <!-- Row container -->
  <div style="padding-left: 25%; padding-right: 25%">

    <!-- Title row -->
    <div class="row">
      <div class="col-sm-12">
        <h2 style="font-family: 'Encode Sans Expanded', sans-serif; font-weight: 200">
          Order <%= @order.id %> has been <%= @action %>
        </h2>
        <h4 style="font-family: 'Encode Sans Expanded', sans-serif; font-weight: 200">
          An email will be sent to <b><%= @order.customer.name %></b> at their email address <a href='mailto:'<%= @order.customer.email %>><%= @order.customer.email %></a>
          notifying them of this action.
        </h4>
      </div>
    </div>

  </div>
  <!-- End Row container -->

</div>
<!-- End Container fluid -->
