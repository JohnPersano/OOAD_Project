<div class="container-fluid" style="padding-top: 100px">

  <!-- Row container -->
  <div style="padding-left: 25%; padding-right: 25%">

    <!-- Title row -->
    <div class="row">
      <div class="col-sm-12">
        <h2 style="font-family: 'Encode Sans Expanded', sans-serif; font-weight: 200">
          Order from  <%= @order_store.name %>
        </h2>
      </div>
    </div>

    <div class="row" style="height: 25px;"></div>

    <table class="standard-table">
      <tr class="standard-table-row" style="border-bottom: 1px solid #999;">
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Price p/d</th>
      </tr>

      <tr class="standard-table-row">
        <td><%= @order_store_item.vehicle.vehicle_description.year %></td>
        <td><%= @order_store_item.vehicle.vehicle_description.make %></td>
        <td><%= @order_store_item.vehicle.vehicle_description.model%></td>
        <td>$<%= @order_store_item.cost %></td>
      </tr>

    </table>

    <%= link_to 'Send order', order_submitted_page_path(store: @order_store, store_item: @order_store_item), class: 'btn btn-primary store-button' %>

  </div>
  <!-- End Row container -->

</div>
<!-- End Container fluid -->
